<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        .nav-buttons {
            margin-bottom: 20px;
        }
        .nav-buttons button {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="nav-buttons">
        <button onclick="window.location.href='/list-product'">Product List</button>
        <button onclick="window.location.href='/shopping-cart'">Shopping Cart</button>
    </div>
    <h1>Shopping Cart</h1>
    <ul>
        <% cart.forEach(item => { %>
            <li>
                <h2><%= item.name %></h2>
                <p>Price: <%= item.price %></p>
            </li>
        <% }) %>
    </ul>
</body>
</html>
