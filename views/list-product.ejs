<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        .cart {
            position: fixed;
            top: 10px;
            right: 10px;
            background: #f8f9fa;
            padding: 10px;
            border: 1px solid #ddd;
        }
        .nav-buttons {
            margin-bottom: 20px;
        }
        .nav-buttons button {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="cart">
        <a href="/shopping-cart">Giỏ hàng</a>
    </div>
    <div class="nav-buttons">
        <button onclick="window.location.href='/list-product'">Product List</button>
        <button onclick="window.location.href='/shopping-cart'">Shopping Cart</button>
    </div>
    <h1>Product List</h1>
    <ul>
        <% products.forEach(product => { %>
            <li>
                <h2><%= product.name %></h2>
                <p>Price: <%= product.price %></p>
                <a href="/product/<%= product.id %>">View Details</a>
                <form action="/shopping-cart" method="post" style="display:inline;">
                    <input type="hidden" name="productId" value="<%= product.id %>">
                    <button type="submit" onclick="showPopup('<%= product.name %>')">Add to Cart</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <script>
        function showPopup(productName) {
            alert(`${productName} đã được thêm vào giỏ hàng!`);
        }
    </script>
</body>
</html>
